<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:text="村を探す"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="29dp"
        android:id="@+id/textView4"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="更新"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="14dp"
        android:id="@+id/btn_refresh" />

    <Button
        android:text="戻る"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:layout_alignBaseline="@+id/btn_refresh"
        android:layout_alignBottom="@+id/btn_refresh"
        android:layout_toEndOf="@+id/btn_refresh"
        android:layout_marginStart="14dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_refresh"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true"
        android:id="@+id/village_list" />

    <TextView
        android:text="現在村はありません"
        android:id="@+id/empty_village_list"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_refresh"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"/>

</RelativeLayout>